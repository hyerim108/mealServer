<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.it.springboot.daodto.ISimple_bbsDAO">
<select id ="board_list" resultType="com.it.springboot.daodto.Simple_bbsDTO">
	select * from simple_bbs
</select>

<select id ="getOne" resultType="com.it.springboot.daodto.Simple_bbsDTO">
	select * from simple_bbs where id=#{param1}
	<!-- 책 parameter 받는 방법 286 -->
</select>

<insert id ="save">
	<!-- save(insert)는 return type 노 필요 -->
	insert into simple_bbs(writer, title, content) values(#{param1},#{param2},#{param3})
</insert>

<update id ="updateReal">
	update simple_bbs set title=#{param3} , content=#{param4} where id=#{param1}
</update>

<delete id ="delete">
	delete from simple_bbs where id=#{param1}
</delete>
</mapper>